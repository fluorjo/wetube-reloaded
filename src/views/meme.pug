doctype html 
html(lang="ko")
    head    
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css")

        link(rel="stylesheet", href="/static/css/styles.css")

    body#memebody
        div.color-options
            input#color(type='color')
            div.color-option(style='background-color: #1abc9c' data-color='#1abc9c')
            div.color-option(style='background-color: #3498db' data-color='#3498db')
            div.color-option(style='background-color: #34495e' data-color='#34495e')
            div.color-option(style='background-color: #27ae60' data-color='#27ae60')
            div.color-option(style='background-color: #8e44ad' data-color='#8e44ad')
            div.color-option(style='background-color: #f1c40f' data-color='#f1c40f')
            div.color-option(style='background-color: #e74c3c' data-color='#e74c3c')
            div.color-option(style='background-color: #95a5a6' data-color='#95a5a6')
            div.color-option(style='background-color: #d35400' data-color='#d35400')
            div.color-option(style='background-color: #2ecc71' data-color='#2ecc71')
            div.color-option(style='background-color: #e67e22' data-color='#e67e22')
        canvas
        
        div.btns
            input#line-width(type='range' min='1' max='10' value='5' step='0.1')
            button#mode-btn.memebutton &#x1FA78;Fill
            button#destroy-btn.memebutton &#x1F4A3;Destroy
            button#eraser-btn.memebutton &#x274C;Erase
            label(for='file' id="memelabel")
                | &#x1F3DE;&#xFE0F;Add photo
                input#file(type='file' accept='image/*')
            input#text(type='text' placeholder='üìùAdd text here')
            span#memespan font size
            input#text-size(type='range' min='1' max='200' step='1' value='50')
            button#save &#x1F4BE;Save image
script(src='/static/js/memeMaker.js')

